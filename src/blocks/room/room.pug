include ../raiting/raiting
include ../stats-room/stats-room


mixin room(opt)
    -opt = opt || {};
    -rooms = opt.rooms || {};
    article.room&attributes(attributes)
        ul.room__gallery
            each item in rooms
                li.room__img
                    img(src=require(`../blocks/room/img/${item}.jpg`) width="271" height="152" alt=`${item}`)
            .room__arrows.room__arrows_prev
            .room__arrows.room__arrows_next
            .swicher
                button.swicher__item(value=1).swicher__item_active
                button.swicher__item(value=2)
                button.swicher__item(value=3)
                button.swicher__item(value=4)
        .room__info
            +stats-room({
                number: opt.number,
                price: opt.price,
                luxury: opt.luxury
            })
            .room__stats
                +raiting(opt.stars)(class='room__raiting')
                span.room__reviews= opt.reviews
                    span  Отзывов
